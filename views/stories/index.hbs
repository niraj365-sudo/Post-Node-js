    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        {{> _sidebar}}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                    {{> _top-navbar}}
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                {{!-- TODO --}}
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                      
                        <div class="card-body mt-5">
                            <div class="table-responsive">
                                 {{#each stories}}
        <div class="container mb-5">
            <div class="card post-container border-bottom-primary ">
                <div class="card-image d-flex g-2 p-2">
                    <img src="{{user.image}}" alt="" class="logo-img">
                    <div class="card-detail ">
                        <a href="/stories/user/{{user._id}}" >
                        {{#if (eq user.displayName "Niraj Paudel")}}
                            {{user.displayName}}
                            <i class="fa-sharp fa-solid fa-circle-check mr-5"></i>
                        {{else}}
                            {{user.displayName}}
                        {{/if}}
                         </a>

                            {{{editIcon user ../user _id}}} {{!-- ../user means go one step above from loop i.e each stories and  grab user--}}

                         
                        <br>
                        {{formatDate createdAt 'MMMM Do YYYY, h:mm a'}}
                    </div>
                    
                </div>
                <div class="card-content center-align p-3 border-top-secondary">
                    <h5> {{title}} </h5>
                    <div> {{stripTags (truncate body )}} </div> {{!-- truncate value is empty now {{stripTags (truncate body empty )}} to set change value of empty to no. of strings you want eg: {{stripTags (truncate body 150 )}}   --}}
                    <div class="social-icons">
                        <hr>
                        <button id="like-button" class="like-button d-flex g-4  ">
                            <i class="fa-regular fa-heart fa-2xs-alt"></i>
                            <a href="#"><i class="fa-regular fa-comment"></i></a>
                            </button>
                        {{!-- <!-- Switch Section --> --}}
                          <div class="card mb-2">
                            <div class="card-body p-2 d-flex align-items-center">
                                 <h6 class="text-primary fw-bold small mb-0 mr-4">Show Comments</h6>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input toggle-switch" type="checkbox" data-post-id="{{user._id}}" checked>
                                    </div>
                                </div>
                            </div>
                        {{!-- <!-- End of Switch Section --> --}}
                        {{!-- <!-- Comment Section --> --}}
          <div class="card mb-3" id="comments-{{user._id}}">
            <div class="card-body">
              <div class="d-flex flex-start">
                <img class="rounded-circle shadow-1-strong me-3"
                  src="{{user.image}}" alt="avatar" width="40"
                  height="40" />
                <div class="w-100">
                  <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="text-primary fw-bold mb-0">
                      {{user.displayName}}
                      <span class="text-dark ms-2">
                        Hmm, This poster looks cool</span>
                    </h6>
                    <p class="mb-0">2 days ago</p>
                  </div>
                  <div class="d-flex justify-content-between align-items-center">
                    <p class="small mb-0" style="color: #aaa;">
                      <a href="#!" class="link-grey">Remove</a> •
                      <a href="#!" class="link-grey">Reply</a> •
                      <a href="#!" class="link-grey">Translate</a>
                    </p>
                    <div class="d-flex flex-row">
                      <i class="fas fa-star text-warning me-2"></i>
                      <i class="far fa-check-circle" style="color: #aaa;"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          {{!-- <!--End of Comment Section --> --}}
          {{!-- Comment Add Section --}}
          
            {{!-- Sample Comment --}}
            <div class="container">

            <div class="card">
                    <form action="/comments/add" method="post">
                       <div class="d-flex ">
                        <input type="text" name="story_id" value={{_id}} style="display: none">
                        <input type="text" class="form-control border-0" placeholder="Add a comment" name="comment">
                        <button class="btn btn-primary" type="Submit">Submit</button>
                       </div>
                    </form>
            </div> 
            {{!-- End Sample Comment --}}
          </div>
          {{!-- End of Comment Add Section --}}
          {{!-- Script for toggle switch --}}
            <script>
                const toggleSwitches = document.querySelectorAll('.toggle-switch');
                toggleSwitches.forEach(function(toggleSwitch) {
                const postId = toggleSwitch.dataset.postId;
                const commentsDiv = document.querySelector(`#comments-${postId}`);
                toggleSwitch.addEventListener('change', function() {
                if (this.checked) {
                alert(commentsDiv)
                    commentsDiv.style.display = 'block';
                } else {
                    commentsDiv.style.display = 'none';
                }
                });
                });
            </script>

          {{!-- EndScript for toggle switch --}}
                        <a href="/stories/{{_id}}" class="text-secondary footer-text d-flex">Read More</a>
                    </div>
                </div>
            </div>
        </div>
    {{else}}
        <p>No post to display</p>
    {{/each}}
                            </div>
                        </div>
                    </div>

                </div>
        <!-- End of Content Wrapper -->
       

    </div>
    <!-- End of Page Wrapper -->


    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="/auth/logout">Logout</a>
                </div>
            </div>
        </div>
    </div>

   
