    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        {{> _sidebar}}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                    {{> _top-navbar}}
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                {{!-- TODO --}}
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                      
                        <div class="card-body mt-5">
                            <div class="table-responsive">
                                 {{#each stories}}
        <div class="container mb-5">
            <div class="card post-container border-bottom-primary ">
                <div class="card-image d-flex g-2 p-2">
                    <img src="{{user.image}}" alt="" class="logo-img">
                    <div class="card-detail ">
                        <a href="/stories/user/{{user._id}}"> {{user.displayName}} </a>
                         {{{editIcon user ../user _id}}} {{!-- ../user means go one step above from loop i.e each stories and  grab user--}}
                        <br>
                        {{formatDate createdAt 'MMMM Do YYYY, h:mm a'}}
                    </div>
                    
                </div>
                <div class="card-content center-align p-3 border-top-secondary">
                    <h5> {{title}} </h5>
                    <div> {{stripTags (truncate body )}} </div> {{!-- truncate value is empty now {{stripTags (truncate body empty )}} to set change value of empty to no. of strings you want eg: {{stripTags (truncate body 150 )}}   --}}
                    <div class="social-icons">
                        <hr>
                        <button id="like-button" class="like-button d-flex"><i class="fa-regular fa-heart fa-2xs-alt"></i></button>
                        
                        <a href="/stories/{{_id}}" class="text-secondary footer-text d-flex">Read More</a>
                    </div>
                </div>
            </div>
        </div>
    {{else}}
        <p>No post to display</p>
    {{/each}}
                            </div>
                        </div>
                    </div>

                </div>
        <!-- End of Content Wrapper -->
       

    </div>
    <!-- End of Page Wrapper -->


    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="/auth/logout">Logout</a>
                </div>
            </div>
        </div>
    </div>

   
